	float: left;
	margin-left: 5px;
	width: 894px;
	position: static;
	z-index: 0;		
}
#frontpage_search{
	background: none;
}
#topnav li a, #content a, #footer a{
	color: #1f1f1f;
}
#topnav li a:visited, #content a:visited, #footer a:visited{
	color: #585858;
}
#topnav li a:hover, #content a:hover, #footer a:hover{
	color: #900000;
}
#navigation_search {
	width:900px;;
}
.lang{
	float: right;
    width: 200px;
}
#wrapper{
	padding: 0px;
}
 .entirebody:after {
    clear:both;
    content:".";
    display:block;
    height:0;
    line-height:0;
    visibility:hidden;
}
